class Solution {
    public String reverseWords(String s) {
        String[] str = s.split(" ");
        StringBuilder sb = new StringBuilder();
        
        for(String value : str)
        {
            char[] c = value.toCharArray();
            swap(c, 0, c.length);
            sb.append(c).append(" ");
        }
        return sb.toString().trim();
    }
    public static void swap(char[] c, int i, int j)
    {
        i = 0;
        j = c.length - 1;
        while(i < j)
        {
            char temp = c[i];
            c[i] = c[j];
            c[j] = temp;
            i++;
            j--;
        }
    }
}
