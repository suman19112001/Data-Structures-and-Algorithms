class Solution {
    public int nextGreaterElement(int n) {
        char[] arr = (n + "").toCharArray();
        int i = arr.length - 2;
        if(i >= 0 && arr[i] >= arr[i+1]){
            i--;
        }
        if(i == -1){
            return -1;
        }
        int k = arr.length - 1;
        while(arr[i] >= arr[k]){
            k--;
        }
        char temp = arr[i];
        arr[i] = arr[k];
        arr[k] = temp;

        int res = 0;
        for(int j = 0; j <= i; j++){
            res += arr[j];
        }
        for(int j = arr.length - 1; j > i; j--){
            res += arr[j];
        }
        return res;
    }
}
